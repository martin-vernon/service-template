networks:
  shared:
    external: true
    name: app-network
  {{SERVICE_NAME}}-internal-network:
    driver: bridge

volumes:
  {{SERVICE_NAME}}-postgres-data:
#   redis_data:

services:
  {{SERVICE_NAME}}-nginx:
    build:
      context: ./
      dockerfile: ./docker/nginx/Dockerfile
      args:
        - UID=${UID:-1000}
        - GID=${GID:-1000}
    volumes:
      - ./:/var/www/html:delegated
    ports:
      - "{{NGINX_PORT}}:80"
    depends_on:
      - {{SERVICE_NAME}}
    networks:
      - shared
      - {{SERVICE_NAME}}-internal-network

