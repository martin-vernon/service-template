  {{SERVICE_NAME}}:
    build:
      context: ./
      dockerfile: ./docker/php/Dockerfile
      args:
        - UID=${UID:-1000}
        - GID=${GID:-1000}
        - GITHUB_OAUTH_TOKEN=${GITHUB_OAUTH_TOKEN}
    image: {{SERVICE_NAME}}-service:latest
    volumes:
      - ./:/var/www/html:delegated
    environment:
      - SERVICE_NAME=${APP_NAME}
      - APP_ENV=${APP_ENV}
      - DB_RUN_MIGRATIONS=${DB_RUN_MIGRATIONS}
      - DB_RESEED=${DB_RESEED}
      - LOG_CHANNEL=${LOG_CHANNEL}
      - LOG_LEVEL=${LOG_LEVEL}
    labels:
      - log.app:quote-service
    logging:
      options:
        max-size: "10m"
        max-file: "3"
    depends_on:
      - {{SERVICE_NAME}}-postgres
    #   - redis
    networks:
      - shared
      - {{SERVICE_NAME}}-internal-network
    entrypoint: ["/usr/local/bin/entrypoint.sh"]

